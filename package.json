{
  "name": "i18n-google-sheet",
  "displayName": "i18n Google Sheet",
  "description": "Sync translations between Google Sheets and JSON files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18n-google-sheet.setup",
        "title": "I18n Google Sheet: Setup"
      },
      {
        "command": "i18n-google-sheet.syncToJson",
        "title": "I18n Google Sheet: Sync from Google Sheets to JSON"
      },
      {
        "command": "i18n-google-sheet.syncToSheet",
        "title": "I18n Google Sheet: Sync from JSON to Google Sheets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-assets",
    "copy-assets": "cp -r src/assets out/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fs-extra": "^11.2.0",
    "googleapis": "^129.0.0",
    "minimatch": "^9.0.3",
    "open": "^10.0.0",
    "yargs": "^17.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/i18n-google-sheet-vscode.git"
  }
}
